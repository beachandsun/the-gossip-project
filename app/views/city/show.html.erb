
<div class="container">
	<div class="row justify-content-md-center">
		<div class="col-10">
			<h1 class="text-center mt-5"><%= City.find(params[:id]).name %> </h1>
			<div class="d-flex justify-content-center">
				<br>
			</div> <br>
		</div>


<% User.where(city_id: params[:id]).each do |user| %>
	<% Gossip.where(user_id: user).each do |pottin|%>
		<div class="col mt-5">
			<div class="card" style="width: 18rem;">
				<div class="card-body">
					<h5 class="card-title"><%= link_to "#{pottin.title}", gossip_path(pottin.id)%></h5>
					<h6 class="card-subtitle mb-2 text-muted"><%= user.first_name %></h6>
					<p class="card-text"><%=pottin.content%></p>
				</div>
			</div><br>
		</div>
		<% end %>
	<% end %>
	</div>
</div>