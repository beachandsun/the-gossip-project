<br>
<div class="container card">
			<%= form_tag url_for(action: "create"), method: "post" do %>
			<br>
			<%= label_tag 'First_name' %>
			<%= text_field_tag 'first_name', @user.first_name, class: 'form-control'%>

			<br /> <br />

			<%= label_tag 'Last_name' %>
			<%= text_field_tag 'last_name', @user.last_name, class: 'form-control'%>

			<br /> <br />

			<%= label_tag 'Email' %>
			<%= text_field_tag 'email', @user.email, class: 'form-control'%>

			<br /> <br />

			<%= label_tag 'Password' %>
			<%= text_field_tag 'password', @user.password, class: 'form-control'%>

			<br /> <br />

			<%= label_tag 'Age' %>
			<%= text_area_tag 'age', @user.age, class: 'form-control'%>

			<br /> <br />


			<%= label_tag 'Description' %>
			<%= text_area_tag 'description', @user.description, class: 'form-control'%>

			<br /> <br />

			


			<%= submit_tag "Sign in", class: 'btn btn-success' %>
			<% end %>
			<br>
		</div>